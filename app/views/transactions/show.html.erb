 
<% if notice %>
  <div class="alert alert-info">
    <p id="notice">
      <%= notice %>
    </p>
  </div>
<% end %>

      <div class="page-header text-center">

        <ul class="list-inline pull-right">
          <li><%= link_to 'Edit', edit_transaction_path(@transaction),
            :class => "btn btn-success" %></li>
          <li><%= link_to 'Transactions', transactions_path,
            :class => "btn btn-info" %></li>
        </ul>

        <h1>Show transaction</h1>

      </div> <!-- end of page-header from edit.html -->
      
<section class="content-tertiary col-md-3">
<p>
  <strong>Date:</strong>
  <%= @transaction.date.strftime("%d %b") %>
</p>

<p>
  <strong>Category:</strong>
  <%= @transaction.category.name %>
</p>

<p>
  <strong>Group:</strong>
  <%= @transaction.category.group.name %>
</p>

<p>
  <strong>Amount:</strong>
  <%= number_with_precision(@transaction.amount, precision: 2) %>
</p>

</section>
